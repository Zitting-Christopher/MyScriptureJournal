@{
    Layout = "~/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-8">
            <h2>Add Scripture</h2>
            <form action="~/Index.cshtml" method="post">
                <div class="form-group">
                    <label class="control-label" for="book">Book</label>
                    <input type="text" class="form-control" id="book" name="book" placeholder="Enter Book" required>
                    <br />
                    <label class="control-label" for="chapter">Chapter</label>
                    <input type="text" class="form-control" id="chapter" name="chapter" placeholder="Enter Chapter" required>
                    <br />
                    <label class="control-label" for="verse">Verse</label>
                    <input type="text" class="form-control" id="verse" name="verse" placeholder="Enter Verse" required>
                    <br />
                    <label class="control-label" for="note">Note</label>
                    <textarea class="form-control" id="note" name="note" required></textarea>
                </div>
                <input type="hidden" name="date" value="@DateTime.Now" />
                <button type="submit" class="btn btn-default">Submit</button>
            </form>
        </div>
        <div class="col-sm-2"></div>
    </div>
</div>